<%= form_for(@startup) do |f| %>
  <% if @startup.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@startup.errors.count, "error") %> prohibited this startup from being saved:</h2>

      <ul>
      <% @startup.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :company_name %><br>
    <%= f.text_field :company_name, placeholder: 'HireMe Seattle', class: "form-control" %><br>
    
    <%= f.label :Organization_Type? %><br>
    <%= f.text_field :founder, placeholder: 'Startup, Nonprofit, Small Business, Group, etc', class: "form-control" %><br>
    
    <%= f.label :location %><br>
    <%= f.text_field :location, placeholder: 'Seattle, Wa', class: "form-control" %><br>
    
    <%= f.label :Logo %><br>
    <%= f.text_field :option_url, placeholder: 'Transparent Recommended | http://www.lavail.io/url_to_person_image.png', class: "form-control" %><br>
    
    <%= f.label :Description %><br>
    <%= f.text_area :summary, placeholder: '|... ', class: "form-control" %><br>
    
    <%= f.label :twitter %><br>
    <%= f.text_field :twitter_url, placeholder: 'http://www.lavail.io/ArisNance', class: "form-control" %><br>
    
    <%= f.label :facebook %><br>
    <%= f.text_field :facebook_url, placeholder: 'http://www.facebook.com/ArisNance', class: "form-control" %><br>
    
    <%= f.label :Company_Website %><br>
    <%= f.text_field :web_url, placeholder: 'https://www.linkedin.com/in/arisnance/', class: "form-control" %><br>
  
    <!--removed add video section-->
    
   <!--removed team memebrs text area-->
    
  </div>
  <div class="actions">
    <%= f.submit value: 'Submit Company' %>
  </div>
<% end %>
