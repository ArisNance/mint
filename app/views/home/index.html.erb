	<div id="wrapper-container">
    
		<div class="container object">

			<div id="main-container-image">
                       
					<section class="work">
						<!--permanent card -->
						<figure class="white">
							<a href="#">
								<img src="assets/theme-4.jpg" alt="" />
								<dl>
									<!--<dt></dt>-->
									<dd>Because <strong>Black Heritage</strong> should not be resurrected, remembered, and celebrated once a year. This section is dedicated to showing our community prominent Black figures throughtout history past and present. Give back by contributing.</dd>	
								</dl>
							</a>
                            <div id="wrapper-part-info">
                            	<div class="part-info-image"><%= link_to new_pin_path do %><i style="font-size: 30px;" class="fa fa-plus-circle" title="Add to History"></i><% end %></div>
                            	<div id="part-info"> </div>
							</div>
							<!--permanent card end-->
						</figure>	
						<% @pins.each do |pin| %>
						<figure class="white">
							<a href="#" style="text-decoration: none;pointer-events: none; cursor: default;">
								<%= image_tag(pin.image_url, class: 'img-fluid') %>
								<dl>
									<dt><%= link_to pin.title, pin %></dt>
									<dd><%= truncate(pin.description, length: 200) { link_to "Continue", pin } %></dd>	
								</dl>
							</a>
                            <div id="wrapper-part-info">
                            	<!--<div class="part-info-image"><img src="assets/icon-psd.svg" alt="" width="28" height="28"/></div>-->
