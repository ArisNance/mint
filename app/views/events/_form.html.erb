<style>
#main-container-footer {
  display: none;
}

#wrapper-copyright {
  display: none;
}
</style>
<%= form_for(@events) do |f| %>
  <% if @events.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@events.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @events.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, placeholder: 'Event Name', class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :summary %><br>
    <%= f.text_area :summary, placeholder: 'Share details about your event', class: "form-control", :maxlength => 100, :size => 40 %>
  </div>
  
  <div class="form-group">
    <%= f.label :Event_image %><br>
    <%= f.text_field :event_image, placeholder: 'Image Url | Recommended  800 x 500', class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :link %><br>
    <%= f.text_field :web_url, placeholder: 'External Link', class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :start_time %><br>
    <%= f.datetime_select :start_time, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :end_time %><br>
    <%= f.datetime_select :end_time, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
