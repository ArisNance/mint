<%= form_for(@pin) do |f| %>
  <% if @pin.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pin.errors.count, "error") %> prohibited this pin from being saved:</h2>

      <ul>
      <% @pin.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :title, placeholder: 'Martin Luther King Jr', class: "form-control" %><br>
    <%= f.label :description %><br>
    <%= f.text_area :description, class: "form-control" %><br>
    <%= f.label :image %><br>
    <!--add file size validation-->
    <%= f.text_field :image_url, placeholder: 'Recommended  800 x 500 | http://www.lavail.io/url_to_company_logo.png', class: "form-control" %><br>
    <%= f.label :source %><br>
    <%= f.text_field :wiki_url, placeholder: 'http://wikipedia.org', class: "form-control" %><br>

  </div>
  <div class="actions">
    <%= f.submit "Submit",class: "btn btn-primary" %>
  </div>
<% end %>
