<style>
#wrapper-copyright {
  display: none;
}

#main-container-footer{
  display: none;
}
</style>

<%= form_for(@story) do |f| %>
  <% if @story.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@story.errors.count, "error") %> prohibited this story from being saved:</h2>

      <ul>
      <% @story.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title, placeholder: 'The Journey', class: "form-control" %>
    <br>
    <br>
    <!--Picmint Gallery-->
    <div id="page-head-text-hide-on-mobile">
    <hr style="border-top: 1px solid #00d49b;">
    <%= link_to home_photos_path, target: "_blank" do %><i style="font-size: 25px;" class="fa fa-camera" title="Picmint Gallery"></i><% end %>
    <span style="margin-left: 16%;"><strong>Click</strong> to explore images in the Picmint gallery.</span>
    <br>
    <br>
    <hr style="border-top: 1px solid #00d49b;">
    <br>
    </div>
   <!--end-->
    <%= f.label :image %><br>
    <%= f.text_field :header_image, placeholder: 'Recommended  800 x 500 | http://www.lavail.io/url_to_person_image.png', class: "form-control" %>
    <br>
        
    <%= f.label :Share_Your_Story %><br>
    <%= f.text_area :description, placeholder: '...| ', class: "form-control" %><br>

    <%= f.label :twitter %><br>
    <%= f.text_field :twitter_url, required: false, placeholder: 'http://www.lavail.io/profile-name | Leave blank to remain anonymous', class: "form-control" %><br>
    
    <%= f.label :facebook %><br>
    <%= f.text_field :facebook_url, placeholder: 'http://www.facebook.com/profile-name | Leave blank to remain anonymous', class: "form-control" %><br>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
